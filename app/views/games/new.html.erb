 <h1>New Game</h1>
 <div class="container">
  <% @letters.each do |letter| %>
    <span class="badge bg-primary"><%= letter.join %></span>
  <% end %>

  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'letters', "#{@letters.join}" %>
    <label for="longword" class="form-label">What is the longest word you can find?</label>
    <input type="text" class="form-control " id="longword" name="longword">
    <input type="submit" class="btn btn-primary mt-2 w-100" value="Send your answer">
  </form>
 </div>
